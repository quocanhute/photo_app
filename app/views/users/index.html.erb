<main role="main" class="col-lg-8 px-md-4 mx-auto pt-3">
  <div class="row justify-content-center">
    <!-- app/views/users/index.html.erb -->
    <h1>All Users</h1>

    <table id="users">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Created At</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= user.username %></th>
          <th><%= user.first_name %></th>
          <th><%= user.last_name %></th>
          <th><%= user.email %></th>
          <th><%= user.role %></th>
          <th><%= link_to "Edit", edit_user_path(user) %></th>
          <th><%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure?" %></th>
        </tr>
        <% end %>
      </tbody>


    </table>

    <p><%= link_to "New User", new_user_path,class: 'btn primary-bg my-2 my-sm-0 text-white' %></p>
  </div>
</main>