<div class="d-flex flex-column justify-content-center">
  <%= link_to vote_video_path(video, type: :upvote),data: { turbo_method: :patch }, class: "item-votable" do %>
    <i class="fa-solid fa-angles-up <%= video_label_styles(video, user, "upvote") %>"></i>
  <% end %>
  <span style="" class="item-votable <%= video_score_type(user,video) %>"><%= video.cached_weighted_like_score %></span>
  <%= link_to vote_video_path(video, type: :downvote),data: { turbo_method: :patch }, class: "item-votable" do %>
    <i class="fa-solid fa-angles-down <%= video_label_styles(video, user, "downvote") %>"></i>
  <% end %>
  <%= link_to bookmark_video_path(video, type: :downvote),data: { turbo_method: :patch }, class: "item-votable" do %>
    <i class="fa-solid fa-bookmark <%= video_label_styles_bookmark(video, user) %>"></i>
  <% end %>
</div>