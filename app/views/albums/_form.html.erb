<%= form_with(model: album) do |form| %>
  <% if album.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-6">
      <div class="form-outline mb-4 w-100">
        <%= form.label :title %>
        <%= form.text_field :title,class: "form-control form-control-lg" %>
      </div>
      <div class="form-outline mb-4 w-100">
        <%= form.label :is_public, 'Sharing Mode' %>
        <%= form.select :is_public, [['Public', 1], ['Private', 0]], { selected: album.is_public ? 1 : 0 }, class: 'form-select' %>
      </div>
      <div class="form-outline mb-4 w-100">
          <%= form.label :images %>
          <%= form.file_field :images, :multiple => true%>
      </div>
    </div>
    <div class="col-6">
      <div class="form-outline mb-4 w-100">
        <%= form.label :description %>
        <%= form.text_area :description,class: "form-control form-control-lg" %>
      </div>
    </div>
  </div>
  <% if album %>
    <div data-controller="multi-file">
      <%= hidden_field_tag "album[remove_image][]", nil, id: "remove_image_hidden" %>
      <% album.images.each do |image| %>
        <%= content_tag(:div,class: "exist-images") do %>
          <%= image_tag(image, id: "avatar", style: 'height:150px;width:150px') %>
          <%= check_box_tag "photos_delete[]", image.id, false, id: "photos_delete#{image.id}", class: 'd-none' %>
          <%= label_tag "photos_delete#{image.id}", "", class: "position-absolute delete-image-checkbox btn btn-outline-danger" do %>
            <i class="fa-solid fa-xmark"></i>
          <% end %>
        <% end %>
      <% end %>
      <h1 data-target="multi-file.output"></h1>
    </div>
  <% end %>
  <div data-controller="hello">
    <h1 data-target="hello.output"></h1>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
