<main role="main" class="col-lg-8 px-md-4 mx-auto pt-3">
  <div class="row justify-content-center" data-controller="home">
    <div class="d-flex justify-content-center">
      <button id="photoButton" class="btn primary-bg text-white" data-action="click->home#buttonPhoto">PHOTO</button>
      <button id="albumButton" class="btn btn-light primary-color"  data-action="click->home#buttonAlbum">ALBUM</button>
    </div>
    <div id="photoContent" data-target="home.photoContent">
      <h1>Photos</h1>
      <div> Welcome <%= @user_gid %> </div>
      <%= turbo_stream_from "public_likes" %>
      <% photo_channel = current_user ? "private_photos" : "public_photos" %>
      <%= turbo_stream_from photo_channel %>
      <%= turbo_stream_from [@user_gid, 'private_likes'] %>
      <%= content_tag(:div, id: photo_channel) do %>
        <% @photos.each do |photo| %>
          <% if current_user %>
            <%= render "photos/private_photo", like_status: current_user.liked?(photo),photo: photo %>
          <% else %>
            <%= render "photos/public_photo", photo: photo %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div id="albumContent" data-target="home.albumContent">
      <h1>Album</h1>
      <%= turbo_stream_from "album_public_likes" %>
      <% album_channel = current_user ? "private_albums" : "public_albums" %>
      <%= turbo_stream_from album_channel %>
      <%= turbo_stream_from [@user_gid, 'album_private_likes'] %>
      <%= content_tag(:div, id: album_channel) do %>
        <% @albums.each do |album| %>
          <% if current_user %>
            <%= render "albums/private_album", album_like_status: current_user.liked_album?(album),album: album %>
          <% else %>
            <%= render "albums/public_album", album: album %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div>
      <% if user_signed_in? %>
        <div> Welcome <%= current_user.email %> </div>
      <% else %>
        <h1>Please Login to see more</h1>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <h1>Admin role</h1>
        <% else %>
          <h1>User role</h1>
          <% end %>
      <% end %>
    </div>
  </div>
</main>