<main role="main" class="col-lg-8 px-md-4 mx-auto pt-3">
  <div class="row justify-content-center">
    <div class="d-flex justify-content-center">
      <button class="btn primary-bg text-white">PHOTO</button>
      <button class="btn btn-light primary-color">ALBUM</button>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div>
      <% if user_signed_in? %>
        <div> Welcome <%= current_user.email %> </div>
      <% else %>
        <h1>Please Login to see more</h1>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <h1>Admin role</h1>
          <%=  link_to "Users", users_path %>
        <% else %>
          <h1>User role</h1>
          <% end %>
      <% end %>
    </div>
  </div>
</main>