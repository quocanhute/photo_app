<div class="flex-column justify-content-center">
  <%= link_to vote_post_path(post, type: :upvote),data: { turbo_method: :patch }, class: "item-votable text-dark" do %>
    <i class="fa-solid fa-angles-up"></i>
  <% end %>
  <span style="" class="item-votable text-dark"><%= post.cached_weighted_like_score %></span>
  <%= link_to vote_post_path(post, type: :downvote),data: { turbo_method: :patch }, class: "item-votable text-dark" do %>
    <i class="fa-solid fa-angles-down"></i>
  <% end %>
  <%= link_to bookmark_post_path(post, type: :downvote),data: { turbo_method: :patch }, class: "item-votable text-dark" do %>
    <i class="fa-solid fa-marker"></i>
  <% end %>
</div>