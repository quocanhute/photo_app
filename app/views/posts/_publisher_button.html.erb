<%= turbo_frame_tag "#{dom_id(post)}_publish_post" ,class: "#{dom_id(post)}_publish_post" do %>
  <% if post.published? %>
    <%= link_to "Unpublish", unpublish_post_path(id: post.id), class: "btn btn-warning btn-block w-100",data: { turbo_method: :post } %>
  <% else %>
    <%= link_to "Publish", publish_post_path(id: post.id), class: "btn btn-secondary btn-block w-100",data: { turbo_method: :post }%>
  <% end %>
<% end %>