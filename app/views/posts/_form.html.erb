<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <%= render "shared/error", object: post %>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :header_image, style: "display: block" %>
    <%= form.file_field :header_image, class: 'form-control' %>
    <div class="mt-1">
      <small>Current image:</small>
      <% if post.header_image.present? %>
        <%= image_tag(post.header_image, width: '100%') %>
      <% end %>
    </div>

  </div>

  <div class="field">
    <%= form.label :tag_list, "Tags (separated by commas)" %><br />
    <%= form.text_field :tag_list, value: post.tag_list.join(","), class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary btn-block w-100' %>
  </div>
<% end %>
