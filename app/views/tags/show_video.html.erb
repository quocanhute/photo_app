<div class="">
  <div class="row w-100 mb-4">
    <div class="col-md-12 " >
      <div class="d-flex justify-content-center flex-column align-items-center rounded-3 position-relative" style="background-color: #EFEFEF">
        <div class="d-flex justify-content-between w-100 px-3 pt-3">
          <div class="d-flex">
            <% if @tag.tag_image.attached? %>
              <%= image_tag(@tag.tag_image, alt: "#{@tag.name}", class: "tag-image") %>
            <% end %>
            <h2><%= @tag.name %></h2>
          </div>
          <% if current_user %>
            <div class="d-flex">
              <%= render 'tags/added_button', tag: @tag, added_status: current_user.tag_added?(@tag) %>
              <div class="ms-2">
                <% if current_user.admin? %>
                  <%= link_to "Edit tag", edit_tag_path(@tag), class: "btn btn-outline-primary" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <p class="mb-3"><%= @tag.detail %></p>
      </div>
    </div>
  </div>
  <div class="row w-100 ">
    <div class="col-md-12">
      <div class="d-flex mb-3">
        <% path = URI.parse(request.original_url).path.split('/').reject(&:empty?)  %>
        <button class="<%= (path.include?("tags") && !path.include?("show_video")) ? "btn btn-primary mx-1 primary-color":"btn primary-bg mx-1"%>"><%= link_to "POSTS WITH TAG", tag_path,class: "text-white"%></button>
        <button class="<%= path.include?("show_video") ? "btn btn-primary mx-1 primary-color":"btn primary-bg mx-1"%>"><%= link_to "VIDEOS WITH TAG", show_video_tag_path, class: "text-white"%></button>
      </div>
      <div class="row row-col-2">
        <%= render "videos/all_video_card", videos: @videos %>
      </div>
    </div>
  </div>
</div>