<div class="row justify-content-center">
  <h1>Tags</h1>

  <%= content_tag(:div,class: "row row-cols-4 d-flex align-items-center") do %>
    <% @tags.each do |tag| %>
      <div class="col col-6 col-md-3 my-2 rounded float-left profile-card-img">
        <div class="profile-photo-card card border-1 align-items-center justify-content-center">
          <div class="card-body">
            <p class="card-text">@<%= tag.name %></p>
            <%= link_to "Edit this tag", edit_tag_path(tag) %>
          </div>
        </div>
      </div>
    <% end %>
  <%end %>
</div>