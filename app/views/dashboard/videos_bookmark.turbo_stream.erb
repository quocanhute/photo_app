<%= turbo_stream.append "videos_dashboard_#{dom_id(current_user)}" do %>
  <%= render "dashboard/all_video_card", videos: @videos %>
<%end %>

<%= turbo_stream.update "load_more_button_videos_dashboard_#{dom_id(current_user)}" do %>
  <% if @pagy.next.present? %>
    <%= button_to "Load more", pagy_url_for(@pagy, @pagy.next), class: "btn btn-outline-primary btn-lg" %>
  <% else %>
    <span>
      <b>Nothing to show!!! 😁</b>
    </span>
  <% end %>
<% end %>