<main role="main" class="col-lg-10 px-md-4 mx-auto pt-3">
  <div class="row justify-content-center">
    <!-- app/views/users/index.html.erb -->
    <h1>Posts Management</h1>
    <table class="table overflow-auto mt-3">
      <thead class="table-dark">
      <tr>
        <th scope="col">Title</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th><%= link_to post.title, post_path(post),class: "text-dark" %></th>
          <th>
            <%= link_to "ACCEPT", action_accept_post_admin_post_path(post),class: "btn btn-success text-white",data: { turbo_frame: "remote_modal" } %>
            <%= link_to "REFUSE",action_refuse_post_admin_post_path(post), class: "btn btn-danger text-white" ,data: { turbo_frame: "remote_modal" }%>
          </th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @posts, theme: 'bootstrap-5',
               pagination_class: "pagination-sm flex-wrap justify-content-center",
               nav_class: "d-inline-block col-12" %>
</main>