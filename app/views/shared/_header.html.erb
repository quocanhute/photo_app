<div class="header sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light primary-bg d-flex">
    <div class="container-xl">
      <button class="btn btn-primary d-block d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="d-flex align-items-center col-7 col-md-8">
        <%= link_to "MyBlog", root_path, class: "navbar-brand text-white" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon text-white"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Posts", posts_index_path,class: "nav-link text-white"%>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="#">Features...</a>
            </li>
          </ul>
        </div>
        <%= render partial: "search/form", locals: {photos: [],albums: [],users: []} %>
      </div>
      <div class="d-flex align-items-center col-3 col-md-4 justify-content-end">
        <% if user_signed_in? %>
          <div class="float-right">
            <ul class="nav float-right">
              <div class="dropdown d-flex align-items-center">
                <% if current_user.avatar.attached? %>
                  <%= image_tag(current_user.avatar, alt: "#{current_user.username}", class: "avatar-image rounded-circle", id: "avatarUserHeader") %>
                <% end %>
                <%= render 'layouts/notifications' %>
                <a href="#" class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown">
                   <%= current_user.username %></b>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><%= link_to "My profile", view_photos_user_path(current_user.id), class: "my-2 my-sm-0 dropdown-item" %></li>
                  <li><%= link_to "Edit account", edit_user_registration_path, class: "my-2 my-sm-0 dropdown-item" %></li>
                  <li><%= link_to "Sign out", destroy_user_session_path, class: "my-2 my-sm-0 dropdown-item", method: :delete %></li>
                </ul>
              </div>
            </ul>
          </div>
        <% else %>
          <%= button_to "Sign in", new_user_session_path,class: 'btn btn-outline-light my-2 my-sm-0', method: :get %>
        <% end %>
        <ul>
          <%= link_to "VI", url_for(locale: "vi"), class: "text-white" %>
          <span class="text-white">|</span>
          <%= link_to "EN", url_for(locale: "en"), class: "text-white" %>
        </ul>
      </div>
    </div>
  </nav>
</div>