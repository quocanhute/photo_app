<% user = @photo.user %>
<%= render "layouts/remote_modal" do %>
  <div class="modal-header">
    <h4 class="modal-title" id="newItemRemoteModalLabel"><%= @photo.title %></h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>

  <div class="modal-body remote_modal_body" id="remote_modal_body">
    <%= image_tag(@photo.img, alt: "#{@photo.title}", class: "profile-photo w-100 card-img-top image_modal", id: "photo-modal") %>
  </div>
  <div class="modal-footer">
    <p class="modal-description"><%= @photo.description %></p>
    <p>Created by <%= link_to user.username , view_photos_user_path(user) %></p>
  </div>
<% end %>