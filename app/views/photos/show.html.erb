<%= render "layouts/remote_modal" do %>

  <div class="modal-header">
    <h4 class="modal-title" id="newItemRemoteModalLabel"><%= @photo.title %></h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>

  <div class="modal-body remote_modal_body" id="remote_modal_body">
    <%= image_tag(@photo.img, alt: "#{@photo.title}", class: "profile-photo w-100 card-img-top", id: "photo-modal") %>
  </div>
<% end %>