<%= form_with(model: photo) do |form| %>
  <% if photo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-6">
        <div class="form-outline mb-4 w-100">
          <%= form.label :title %>
          <%= form.text_field :title,class: "form-control form-control-lg" %>
        </div>
        <div class="form-outline mb-4 w-100">
          <%= form.label :is_public, 'Sharing Mode' %>
          <%= form.select :is_public, [['Public', 1], ['Private', 0]], { selected: photo.is_public ? 1 : 0 }, class: 'form-select' %>
        </div>
        <div class="col-md-4">
          <div class="profile-img" data-controller="upload-image">
          <% if photo.img.attached? %>
            <div class="avatar">
              <%= image_tag(photo.img, alt: "#{photo.title}", class: "photo-image", id: "imgPhoto",style: 'height:150px;width:150px',data: { target: 'upload-image.avatar'}) %>
            </div>
          <%else %>
            <div class="avatar">
              <%= image_tag('image.jpg', class: "photo-image", id: "imgPhoto",style: 'height:150px;width:150px',data: { target: 'upload-image.avatar'}) %>
            </div>
          <% end %>
          <%= form.label :img,"Change Photo", class: "col-6 col-form-label label-avatar" %>
          <%= form.file_field :img,
                           class: "d-none",
                           placeholder: 'Update picture',
                           data:{action: 'change->upload-image#handleChange'},
                           direct_upload: true %>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="form-outline mb-4 w-100">
          <%= form.label :description %>
          <%= form.text_area :description,class: "form-control form-control-lg" %>
        </div>
      </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
